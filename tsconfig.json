{
  /** Config for GNOME Extensions (GJS) */
  "extends": [
    "@tsconfig/node-ts",
  ],
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2023",
    "lib": [
      "ES2022",
      "ES2023.Array",
    ],
    "skipLibCheck": true,
    "rewriteRelativeImportExtensions": false,
    "rootDir": "./src",
    "typeRoots": ["./types"],
    // composite build
    "incremental": true,
    "composite": true,
    "outDir": "./.ts-cache/src",
  },
  "include": ["src/**/*.ts"],
  "references": [
    { "path": "./tsconfig.dev.json" },
  ],
}
