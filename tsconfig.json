{
  /** Config for GNOME Extensions (GJS) */
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2023",
    "lib": [
      "ES2022",
      "ES2023.Array",
    ],
    "checkJs": true,
    "allowJs": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "typeRoots": ["./types"],
    // composite build
    "incremental": true,
    "composite": true,
    "outDir": "./.ts-cache/src",
  },
  "include": ["src/**/*.js"],
  "references": [
    { "path": "./tsconfig.dev.json" },
  ],
}
